#!/bin/bash

# Step 1: Apply the updated deployment with image version 2.0
echo "ğŸ“¦ Applying blue deployment with image version 2.0..."
kubectl apply -f blue_deployment.yaml

# Step 2: Monitor the rollout status
echo "ğŸ”„ Waiting for rolling update to complete..."
kubectl rollout status deployment/blue-deployment

# Step 3: Test for downtime using curl in a loop
echo "ğŸ“¡ Testing application availability during update..."
for i in {1..10}
do
    curl -s http://localhost/api/ || echo "âŒ Request failed"
    sleep 1
done

# Step 4: Check if new pods are running
echo "âœ… Listing current pods after update:"
kubectl get pods -o wide
